            <h2>@Model.Name</h2>
        </div>

    </div>

    <br />
    <div class="row">
        <div class="col-sm-2 col-md-3 col-lg-2">
            <img class="img-responsive" src="@Model.ImageURL">
        </div>

        <div class="col-sm-10 col-md-9 col-lg-10 text-left">
