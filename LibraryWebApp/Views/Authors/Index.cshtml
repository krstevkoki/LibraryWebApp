@model IEnumerable<LibraryWebApp.Models.Author>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="AuthorsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="@item.ImageURL"><img src="@item.ImageURL" style="max-width:200px; max-height: 200px" ; /></a>
                </td>
                <td>
                    @if (item.Books.Count == 0)
                    {
                        <span class="alert-warning">This author has no books!</span>
                    }
                    else
                    {
                        <ul class="list-group list-unstyled">
                            @foreach (var book in item.Books)
                            {
                                <li class="list-group-item">@book.Title</li>
                            }
                        </ul>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success " }) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary " }) 
                    @Html.ActionLink("Delete", "Delete", "Authors", new { id = item.Id }, new { @class = "btn btn-danger js-delete" })
                </td>
            </tr>
        }
    </tbody>

</table>

<div id="dialog">
    <p class="alert alert-danger text-danger">
        <span class="glyphicon glyphicon-alert"></span>
        <span>Are you sure you want to delete this item?</span>
    </p>
</div>

@section styles
{

    <link rel="stylesheet" type="text/css" href="@Href("~/Content/jquery-ui.css")" />
}

@section scripts{

    <script type="text/javascript" src="@Href("~/Scripts/jquery-ui.js")"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            var dialog = $("#dialog").dialog({
                resizable: false,
                draggable: false,
                autoOpen: false,
                width: 400,
                modal: true,
                title: "Delete confirmation",
                buttons: {
                    Yes: function () {
                        var url = button.attr("href");
                        window.location = url;
                        dialog.dialog("close");
                    },
                    No: function () {
                        dialog.dialog("close");
                    }
                }
            });

            $("body").on("click", "a.js-delete", function (event) {
                event.preventDefault();
                button = $(this);
                dialog.dialog("open");
            });
        });

    </script>
}