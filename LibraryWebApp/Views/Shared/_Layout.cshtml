<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=yes"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LibraryWebApp</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("LibraryWebApp", "Index", "Books", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Books")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()

    <div class="container" style="margin-top: 1.5em">
        <footer id="ftr" class="row text-center">
            <div class="row">
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <span class="contact"><b>Our FB Page:</b></span>
                </div>
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <span class="contact"><b>Address:</b></span>
                </div>

                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <span class="contact"><b>E-mail: </b></span>
                </div>

                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <span class="contact"><b>Phone:</b></span>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <p class="contact">
                        <a href="https://www.facebook.com/">LibraryWebApp</a>
                    </p>
                </div>

                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <p class="contact">
                        st. Partizanski Odredi bb. Skopje
                    </p>
                </div>

                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <p class="contact">
                        contact@librarywebapp.com
                    </p>
                </div>

                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <p class="contact">(+389) 71 234 567</p>
                </div>
            </div>
            <br />
            <p style="color: #134aa3; font-weight: bold;">&copy; @DateTime.Now.Year - LibaryWebApp</p>
        </footer>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
<script type="text/javascript">
    $(document).ready(function() {
        var count = $("#cart-items-count").attr("data-cart-count");
        $("#cart-items-count").html(count);
    });
</script>
</body>

</html>

@section scripts{


    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
}