@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("input[type=text], input[type=email], input[type=tel]").each(function () {
                if ($(this).attr("value") !== "") {
                    $(this).attr({
                        "title": "We got this from your profile info!",
                        "readonly": "true"
                    });
                }
            });
        });
    </script>
}